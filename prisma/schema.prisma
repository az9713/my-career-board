// PCGS Database Schema - SQLite with Prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User account for authentication
model User {
  id                      String    @id @default(cuid())
  email                   String    @unique
  password                String
  name                    String?
  avatarUrl               String?
  settings                String    @default("{\"llm_provider\": \"anthropic\", \"notifications_enabled\": true}")
  timezone                String    @default("UTC")
  notificationPreferences String?   // JSON with email preferences
  notificationEmail       String?   // Override email for notifications
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  // Relations
  problems       Problem[]
  boardRoles     BoardRole[]
  boardSessions  BoardSession[]
  reports        QuarterlyReport[]
  bets           Bet[]
  reminders      Reminder[]
  contexts       UserContext[]
  accounts       Account[]
  calendarEvents CalendarEvent[]
  teamMembers    TeamMember[]
  teamInvitesSent TeamInvite[]   @relation("InvitedBy")
  feedbackGiven  PeerFeedback[] @relation("FeedbackFrom")
  feedbackReceived PeerFeedback[] @relation("FeedbackTo")
  evidence       Evidence[]
  checkins       MicroCheckin[]
  checkinStreak  CheckinStreak?
  decisions        Decision[]
  timelineEvents   TimelineEvent[]
  careerPhases     CareerPhase[]
  feedbackRequests FeedbackRequest[]
  selfAssessments  SelfAssessment[]
  skills           Skill[]
  skillGaps        SkillGap[]
  skillGoals       SkillGoal[]
  contacts         Contact[]
  networkingGoals  NetworkingGoal[]
  okrPeriods       OKRPeriod[]
  objectives       Objective[]
  compensationRecords CompensationRecord[]
  equityGrants     EquityGrant[]
  learningResources LearningResource[]
  certifications   Certification[]
  learningGoals    LearningGoal[]
}

// Problem Portfolio
model Problem {
  id                      String   @id @default(cuid())
  userId                  String
  name                    String
  whatBreaks              String
  scarcitySignals         String   @default("[]")
  aiCheaper               String?
  errorCost               String?
  trustRequired           String?
  classification          String
  classificationReasoning String?
  timeAllocation          Int?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  boardRoles BoardRole[]

  @@index([userId])
}

// Board Roles
model BoardRole {
  id                String   @id @default(cuid())
  userId            String
  roleType          String
  anchoredProblemId String?
  focusArea         String
  systemPrompt      String?
  generatedAt       DateTime @default(now())

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  anchoredProblem Problem? @relation(fields: [anchoredProblemId], references: [id], onDelete: SetNull)

  @@index([userId])
}

// Board Sessions
model BoardSession {
  id           String    @id @default(cuid())
  userId       String
  sessionType  String
  quarter      String?
  status       String    @default("in_progress")
  currentPhase Int       @default(1)
  startedAt    DateTime  @default(now())
  completedAt  DateTime?

  user     User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages SessionMessage[]
  report   QuarterlyReport?

  @@index([userId])
  @@index([status])
}

// Session Messages
model SessionMessage {
  id          String   @id @default(cuid())
  sessionId   String
  speaker     String
  content     String
  messageType String
  metadata    String?
  createdAt   DateTime @default(now())

  session BoardSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
}

// Quarterly Reports
model QuarterlyReport {
  id        String @id @default(cuid())
  sessionId String @unique
  userId    String
  quarter   String

  lastBet         String?
  lastBetWrongIf  String?
  lastBetResult   String?
  lastBetEvidence String?
  commitments     String?

  avoidedDecision     String
  avoidedDecisionWhy  String
  avoidedDecisionCost String
  comfortWork         String
  comfortWorkAvoided  String

  nextBet        String
  nextBetWrongIf String

  overallAssessment String?
  concerns          String?
  actionItems       String?

  createdAt DateTime @default(now())

  session BoardSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user    User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Bets - Falsifiable commitments for accountability tracking
model Bet {
  id                  String    @id @default(cuid())
  userId              String
  content             String    // The bet statement
  falsifiableCriteria String    // How to determine if bet was hit or missed
  deadline            DateTime  // When the bet should be evaluated
  quarter             String    // e.g., "Q1-2024"
  status              String    @default("pending") // pending, resolved
  outcome             String?   // hit, miss, excused
  evidence            String?   // Proof if bet was hit
  reflection          String?   // Reflection if bet was missed or excused
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  resolvedAt          DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([quarter])
  @@index([status])
}

// Reminders - Scheduled notifications for users
model Reminder {
  id           String    @id @default(cuid())
  userId       String
  type         String    // quarterly_review, weekly_checkin, avoidance_alert, streak_milestone
  scheduledFor DateTime  // When to send the reminder
  sent         Boolean   @default(false)
  sentAt       DateTime?
  metadata     String?   // JSON with additional context
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([scheduledFor])
  @@index([sent])
  @@index([type])
}

// User Context - Personal context for AI directors
model UserContext {
  id         String   @id @default(cuid())
  userId     String
  type       String   // resume, linkedin, document, notes
  name       String   // User-defined name for this context
  rawText    String?  // Original text content
  parsedData String?  // JSON with extracted structured data
  summary    String?  // AI-generated summary for director prompts
  metadata   String?  // JSON with file info, source, etc.
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
}

// Account - OAuth and other authentication providers
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String  // oauth, credentials
  provider          String  // google, github, credentials
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// CalendarEvent - Scheduled meetings and reminders
model CalendarEvent {
  id               String    @id @default(cuid())
  userId           String
  title            String
  description      String?
  type             String    // quarterly_review, weekly_checkin, bet_deadline, custom
  startTime        DateTime
  endTime          DateTime
  reminders        String?   // JSON array of minutes before event
  externalId       String?   // ID from external calendar (Google, etc.)
  externalProvider String?   // google, outlook, etc.
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([startTime])
  @@index([type])
}

// Team - Accountability groups
model Team {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members  TeamMember[]
  invites  TeamInvite[]
  feedback PeerFeedback[]
}

// TeamMember - Team membership with roles
model TeamMember {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  role      String   @default("member") // owner, admin, member
  joinedAt  DateTime @default(now())

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([teamId])
  @@index([userId])
}

// TeamInvite - Pending team invitations
model TeamInvite {
  id          String   @id @default(cuid())
  teamId      String
  email       String
  invitedById String
  status      String   @default("pending") // pending, accepted, declined
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  team      Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  invitedBy User @relation("InvitedBy", fields: [invitedById], references: [id], onDelete: Cascade)

  @@index([teamId])
  @@index([email])
  @@index([status])
}

// PeerFeedback - Feedback between team members
model PeerFeedback {
  id         String   @id @default(cuid())
  teamId     String
  fromUserId String
  toUserId   String
  type       String   // encouragement, suggestion, concern, celebration
  content    String
  createdAt  DateTime @default(now())

  team     Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  fromUser User @relation("FeedbackFrom", fields: [fromUserId], references: [id], onDelete: Cascade)
  toUser   User @relation("FeedbackTo", fields: [toUserId], references: [id], onDelete: Cascade)

  @@index([teamId])
  @@index([toUserId])
}

// Evidence Vault - Document accomplishments and feedback
model Evidence {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  type        String   // win, feedback, metric, artifact, milestone
  source      String?  // performance-review, self, manager, peer, customer
  date        DateTime @default(now())
  impact      String?  // Description of the impact
  metadata    String?  // JSON with additional context
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  attachments EvidenceAttachment[]
  problemLinks EvidenceProblemLink[]

  @@index([userId])
  @@index([type])
  @@index([date])
}

// EvidenceAttachment - Files attached to evidence
model EvidenceAttachment {
  id         String   @id @default(cuid())
  evidenceId String
  filename   String
  fileType   String   // pdf, image, document, etc.
  url        String   // Storage URL or path
  size       Int?     // File size in bytes
  createdAt  DateTime @default(now())

  evidence Evidence @relation(fields: [evidenceId], references: [id], onDelete: Cascade)

  @@index([evidenceId])
}

// EvidenceProblemLink - Link evidence to portfolio problems
model EvidenceProblemLink {
  id         String @id @default(cuid())
  evidenceId String
  problemId  String

  evidence Evidence @relation(fields: [evidenceId], references: [id], onDelete: Cascade)

  @@unique([evidenceId, problemId])
  @@index([evidenceId])
  @@index([problemId])
}

// MicroCheckin - Lightweight daily/weekly check-ins
model MicroCheckin {
  id        String   @id @default(cuid())
  userId    String
  promptId  String
  response  String
  mood      Int?     // 1-5 scale
  createdAt DateTime @default(now())

  user   User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  prompt CheckinPrompt @relation(fields: [promptId], references: [id])

  @@index([userId])
  @@index([createdAt])
}

// CheckinPrompt - Questions for check-ins
model CheckinPrompt {
  id        String   @id @default(cuid())
  category  String   // progress, blockers, wins, reflection, planning
  question  String
  frequency String   @default("daily") // daily, weekly
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  checkins MicroCheckin[]

  @@index([category])
  @@index([frequency])
  @@index([isActive])
}

// CheckinStreak - Track user check-in streaks
model CheckinStreak {
  id            String    @id @default(cuid())
  userId        String    @unique
  currentStreak Int       @default(0)
  longestStreak Int       @default(0)
  lastCheckinAt DateTime?
  updatedAt     DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Decision - Track important career decisions
model Decision {
  id           String    @id @default(cuid())
  userId       String
  title        String
  description  String?
  context      String?   // Background context for the decision
  options      String?   // JSON array of options considered
  chosenOption String?   // The option that was chosen
  prediction   String?   // What user predicts will happen
  confidence   Int?      // 1-5 confidence level
  category     String?   // compensation, role-change, relocation, project, relationship
  status       String    @default("pending") // pending, decided, reviewing, closed
  decidedAt    DateTime?
  revisitAt    DateTime? // When to review this decision
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user    User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  outcome DecisionOutcome?
  tags    DecisionTag[]

  @@index([userId])
  @@index([status])
  @@index([revisitAt])
}

// DecisionOutcome - Record what actually happened
model DecisionOutcome {
  id             String   @id @default(cuid())
  decisionId     String   @unique
  actualOutcome  String   // What actually happened
  accuracy       Int?     // 1-5 how accurate was the prediction
  lessonsLearned String?  // Reflection on what was learned
  reviewedAt     DateTime @default(now())

  decision Decision @relation(fields: [decisionId], references: [id], onDelete: Cascade)
}

// DecisionTag - Categorize decisions
model DecisionTag {
  id         String @id @default(cuid())
  decisionId String
  tag        String

  decision Decision @relation(fields: [decisionId], references: [id], onDelete: Cascade)

  @@unique([decisionId, tag])
  @@index([decisionId])
  @@index([tag])
}

// TimelineEvent - Career timeline events
model TimelineEvent {
  id          String   @id @default(cuid())
  userId      String
  type        String   // job, decision, bet, milestone, evidence, achievement
  title       String
  description String?
  date        DateTime
  endDate     DateTime? // For events with duration (like jobs)
  metadata    String?   // JSON with type-specific data
  sourceId    String?   // Reference to source record (decision, bet, evidence)
  sourceType  String?   // Type of source record
  importance  Int       @default(3) // 1-5 importance level
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  inflectionPoint  InflectionPoint?

  @@index([userId])
  @@index([type])
  @@index([date])
}

// CareerPhase - Define career phases/chapters
model CareerPhase {
  id          String    @id @default(cuid())
  userId      String
  title       String
  description String?
  startDate   DateTime
  endDate     DateTime?
  color       String?   // For visualization
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([startDate])
}

// InflectionPoint - Mark key moments in career
model InflectionPoint {
  id          String @id @default(cuid())
  eventId     String @unique
  impact      String // Description of the impact
  beforeState String? // State before this point
  afterState  String? // State after this point

  event TimelineEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

// ========== 360Â° Feedback Integration ==========

// FeedbackRequest - Request feedback from colleagues
model FeedbackRequest {
  id          String    @id @default(cuid())
  userId      String    // User requesting feedback
  title       String    // e.g., "Q1 2024 Feedback"
  description String?   // Context for the feedback request
  anonymous   Boolean   @default(true)
  status      String    @default("open") // open, closed
  expiresAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user       User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  questions  FeedbackQuestion[]
  responses  FeedbackResponse[]
  recipients FeedbackRecipient[]

  @@index([userId])
  @@index([status])
}

// FeedbackQuestion - Questions in a feedback request
model FeedbackQuestion {
  id         String @id @default(cuid())
  requestId  String
  question   String
  category   String // leadership, communication, technical, collaboration, etc.
  type       String @default("scale") // scale (1-5), text, multiple-choice
  options    String? // JSON array for multiple-choice
  order      Int    @default(0)

  request  FeedbackRequest           @relation(fields: [requestId], references: [id], onDelete: Cascade)
  answers  FeedbackQuestionResponse[]

  @@index([requestId])
}

// FeedbackRecipient - Who is invited to give feedback
model FeedbackRecipient {
  id         String   @id @default(cuid())
  requestId  String
  email      String
  name       String?
  relationship String? // manager, peer, direct-report, cross-functional
  token      String   @unique // Unique token for anonymous access
  responded  Boolean  @default(false)
  createdAt  DateTime @default(now())

  request FeedbackRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)

  @@index([requestId])
  @@index([email])
  @@index([token])
}

// FeedbackResponse - Response to a feedback request
model FeedbackResponse {
  id           String   @id @default(cuid())
  requestId    String
  respondentId String?  // Null if anonymous
  relationship String?  // manager, peer, direct-report, cross-functional
  submittedAt  DateTime @default(now())

  request FeedbackRequest            @relation(fields: [requestId], references: [id], onDelete: Cascade)
  answers FeedbackQuestionResponse[]

  @@index([requestId])
}

// FeedbackQuestionResponse - Individual answers
model FeedbackQuestionResponse {
  id          String @id @default(cuid())
  responseId  String
  questionId  String
  scaleValue  Int?   // For scale questions (1-5)
  textValue   String? // For text questions
  choiceValue String? // For multiple-choice

  response FeedbackResponse @relation(fields: [responseId], references: [id], onDelete: Cascade)
  question FeedbackQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@index([responseId])
  @@index([questionId])
}

// SelfAssessment - User's self-assessment for comparison
model SelfAssessment {
  id        String   @id @default(cuid())
  userId    String
  category  String   // leadership, communication, technical, etc.
  area      String   // Specific area within category
  rating    Int      // 1-5 self-rating
  notes     String?  // Optional notes
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([category])
}

// ========== Skills Gap Analyzer ==========

// Skill - User's skills with proficiency
model Skill {
  id             String    @id @default(cuid())
  userId         String
  name           String
  category       String    // technical, soft-skill, domain, tool
  proficiency    Int       // 1-5 current proficiency
  targetLevel    Int?      // 1-5 desired proficiency
  lastAssessed   DateTime  @default(now())
  yearsExperience Float?
  notes          String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user           User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  marketDemands  SkillMarketDemand[]
  goals          SkillGoal[]

  @@unique([userId, name])
  @@index([userId])
  @@index([category])
}

// MarketSkillDemand - Market demand data for skills
model MarketSkillDemand {
  id              String   @id @default(cuid())
  skillName       String   // Normalized skill name
  demandLevel     Int      // 1-5 how in-demand
  growthTrend     String   // rising, stable, declining
  salaryImpact    String?  // high, medium, low
  jobPostings     Int?     // Number of job postings mentioning this
  industry        String?  // Specific industry or "general"
  source          String?  // Where this data came from
  dataDate        DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  skillLinks SkillMarketDemand[]

  @@index([skillName])
  @@index([demandLevel])
}

// SkillMarketDemand - Link skills to market demand
model SkillMarketDemand {
  id             String @id @default(cuid())
  skillId        String
  marketDemandId String

  skill        Skill             @relation(fields: [skillId], references: [id], onDelete: Cascade)
  marketDemand MarketSkillDemand @relation(fields: [marketDemandId], references: [id], onDelete: Cascade)

  @@unique([skillId, marketDemandId])
  @@index([skillId])
  @@index([marketDemandId])
}

// SkillGap - Identified skill gaps
model SkillGap {
  id           String   @id @default(cuid())
  userId       String
  skillName    String
  currentLevel Int?     // Current proficiency (null if not possessed)
  requiredLevel Int     // Required for goal/market
  gapSize      Int      // requiredLevel - currentLevel
  priority     String   // critical, high, medium, low
  source       String   // market-demand, job-target, self-identified
  targetRole   String?  // If gap is for a specific role
  notes        String?
  status       String   @default("open") // open, in-progress, closed
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([priority])
  @@index([status])
}

// SkillGoal - User goals for skill development
model SkillGoal {
  id           String    @id @default(cuid())
  userId       String
  skillId      String?   // Existing skill to improve
  skillName    String    // Name (for new skills)
  targetLevel  Int       // 1-5 target proficiency
  deadline     DateTime?
  reason       String?   // Why this goal
  resources    String?   // JSON array of learning resources
  milestones   String?   // JSON array of milestones
  progress     Int       @default(0) // 0-100 percentage
  status       String    @default("active") // active, completed, abandoned
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  skill Skill? @relation(fields: [skillId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([status])
}

// ========== Mentor Network & Networking Tracker ==========

// Contact - Professional contacts in network
model Contact {
  id             String    @id @default(cuid())
  userId         String
  name           String
  email          String?
  company        String?
  title          String?
  relationship   String    // mentor, mentee, peer, sponsor, colleague, recruiter
  strength       Int       @default(3) // 1-5 relationship strength
  notes          String?
  linkedinUrl    String?
  lastContactAt  DateTime?
  nextFollowUp   DateTime?
  tags           String?   // JSON array of tags
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  interactions Interaction[]

  @@index([userId])
  @@index([relationship])
  @@index([strength])
  @@index([nextFollowUp])
}

// Interaction - Log interactions with contacts
model Interaction {
  id          String   @id @default(cuid())
  contactId   String
  type        String   // meeting, email, call, coffee, event, linkedin, intro
  date        DateTime @default(now())
  summary     String?
  notes       String?
  followUpNeeded Boolean @default(false)
  followUpDate   DateTime?
  sentiment   String?  // positive, neutral, negative
  createdAt   DateTime @default(now())

  contact Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@index([contactId])
  @@index([date])
  @@index([type])
}

// NetworkingGoal - Goals for networking activities
model NetworkingGoal {
  id          String    @id @default(cuid())
  userId      String
  title       String
  description String?
  targetCount Int?      // Target number (e.g., "Meet 5 new people")
  currentCount Int      @default(0)
  category    String    // expand-network, deepen-relationships, find-mentor, industry-connect
  deadline    DateTime?
  status      String    @default("active") // active, completed, abandoned
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

// ========== Career OKRs & Goal Tracking ==========

// OKRPeriod - Time periods for OKRs (quarters, years)
model OKRPeriod {
  id        String   @id @default(cuid())
  userId    String
  name      String   // e.g., "Q1 2024", "2024"
  type      String   // quarter, year, custom
  startDate DateTime
  endDate   DateTime
  status    String   @default("active") // planning, active, completed, reviewed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  objectives Objective[]

  @@index([userId])
  @@index([status])
  @@index([startDate])
}

// Objective - Career objectives
model Objective {
  id          String   @id @default(cuid())
  periodId    String
  userId      String
  title       String
  description String?
  category    String   // growth, impact, learning, leadership, wellness
  priority    Int      @default(2) // 1-3 priority level
  progress    Int      @default(0) // 0-100 calculated from key results
  status      String   @default("on-track") // on-track, at-risk, behind, completed
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  period     OKRPeriod   @relation(fields: [periodId], references: [id], onDelete: Cascade)
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  keyResults KeyResult[]

  @@index([periodId])
  @@index([userId])
  @@index([status])
}

// KeyResult - Measurable key results for objectives
model KeyResult {
  id           String    @id @default(cuid())
  objectiveId  String
  title        String
  description  String?
  metricType   String    // number, percentage, boolean, currency
  targetValue  Float     // Target to achieve
  currentValue Float     @default(0) // Current progress
  startValue   Float     @default(0) // Starting point
  unit         String?   // e.g., "users", "revenue", "%"
  progress     Int       @default(0) // 0-100 percentage
  confidence   Int?      // 1-5 confidence in achieving
  status       String    @default("on-track") // on-track, at-risk, behind, completed
  notes        String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  objective     Objective         @relation(fields: [objectiveId], references: [id], onDelete: Cascade)
  checkIns      KeyResultCheckIn[]

  @@index([objectiveId])
  @@index([status])
}

// KeyResultCheckIn - Progress updates for key results
model KeyResultCheckIn {
  id           String   @id @default(cuid())
  keyResultId  String
  value        Float    // Updated value
  previousValue Float   // Value before this update
  notes        String?
  createdAt    DateTime @default(now())

  keyResult KeyResult @relation(fields: [keyResultId], references: [id], onDelete: Cascade)

  @@index([keyResultId])
  @@index([createdAt])
}

// ========== Compensation & Equity Tracker ==========

// CompensationRecord - Salary and bonus history
model CompensationRecord {
  id            String   @id @default(cuid())
  userId        String
  type          String   // salary, bonus, signing-bonus, raise
  amount        Float
  currency      String   @default("USD")
  effectiveDate DateTime
  company       String?
  role          String?
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
  @@index([effectiveDate])
}

// EquityGrant - Stock options and RSU grants
model EquityGrant {
  id              String    @id @default(cuid())
  userId          String
  company         String
  grantType       String    // rsu, iso, nso, espp
  grantDate       DateTime
  totalShares     Int
  vestedShares    Int       @default(0)
  strikePrice     Float?    // For options
  currentPrice    Float?    // Current share price
  vestingSchedule String?   // JSON describing vesting schedule
  cliffMonths     Int?      // Cliff period in months
  vestingMonths   Int?      // Total vesting period
  status          String    @default("active") // active, fully-vested, expired, exercised
  expirationDate  DateTime?
  notes           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user     User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  vestings EquityVesting[]

  @@index([userId])
  @@index([company])
  @@index([status])
}

// EquityVesting - Individual vesting events
model EquityVesting {
  id          String   @id @default(cuid())
  grantId     String
  vestDate    DateTime
  shares      Int
  vested      Boolean  @default(false)
  vestedAt    DateTime?
  createdAt   DateTime @default(now())

  grant EquityGrant @relation(fields: [grantId], references: [id], onDelete: Cascade)

  @@index([grantId])
  @@index([vestDate])
}

// CompensationBenchmark - Market salary comparisons
model CompensationBenchmark {
  id           String   @id @default(cuid())
  role         String
  level        String?  // junior, mid, senior, staff, principal
  location     String?
  industry     String?
  percentile25 Float?
  percentile50 Float    // Median
  percentile75 Float?
  percentile90 Float?
  source       String?  // levels.fyi, glassdoor, etc.
  dataDate     DateTime @default(now())
  createdAt    DateTime @default(now())

  @@index([role])
  @@index([level])
  @@index([location])
}

// ========== Learning Path & Certifications ==========

// LearningResource - Courses, books, tutorials, conferences
model LearningResource {
  id           String    @id @default(cuid())
  userId       String
  title        String
  type         String    // course, book, tutorial, conference, workshop, video
  provider     String?   // Coursera, Udemy, O'Reilly, etc.
  url          String?
  skillId      String?   // Linked skill
  status       String    @default("not-started") // not-started, in-progress, completed, abandoned
  progress     Int       @default(0) // 0-100
  startedAt    DateTime?
  completedAt  DateTime?
  rating       Int?      // 1-5 personal rating
  notes        String?
  cost         Float?
  hoursSpent   Float?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
  @@index([status])
  @@index([skillId])
}

// Certification - Professional certifications
model Certification {
  id             String    @id @default(cuid())
  userId         String
  name           String
  issuer         String    // AWS, Google, Microsoft, etc.
  credentialId   String?
  credentialUrl  String?
  skillId        String?   // Linked skill
  earnedAt       DateTime
  expiresAt      DateTime?
  status         String    @default("active") // active, expired, renewed
  renewalCost    Float?
  notes          String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([issuer])
  @@index([status])
  @@index([expiresAt])
}

// LearningGoal - Goals for learning, linked to skill gaps
model LearningGoal {
  id           String    @id @default(cuid())
  userId       String
  title        String
  description  String?
  skillGapId   String?   // Linked to a skill gap
  targetDate   DateTime?
  resources    String?   // JSON array of resource IDs
  milestones   String?   // JSON array of milestones
  progress     Int       @default(0) // 0-100
  status       String    @default("active") // active, completed, abandoned
  priority     String    @default("medium") // low, medium, high, critical
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([skillGapId])
}
